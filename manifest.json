{
    "manifest_version": 2,
    "name": "CareerArchitech",
    "version": "1.0",
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": ["extension/content.js"]
        }
    ],
    "background": {
        "scripts": ["extension/background.js"]
    },
    "browser_action": {
        "default_icon": "extension/icon.png",
        "default_popup": "extension/popup.html"
    },
    "permissions": ["activeTab"]
}